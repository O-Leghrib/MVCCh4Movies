@model List<Movie>
@{
    ViewData["Title"] = "My Movies :)";
}

<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add" class="btn btn-primary">Add New Movie</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@movie.Genre.Name</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a> |
                    <a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>